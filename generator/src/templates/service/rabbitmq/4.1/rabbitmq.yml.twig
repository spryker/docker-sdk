  {{ serviceName }}:
    image: spryker/rabbitmq:4.1
    hostname: {{ serviceName }} # RabbitMQ determines the cluster by its hostname
    networks:
      - private
    labels:
      'spryker.app.name': broker
      'spryker.app.type': services
      'spryker.project': ${SPRYKER_DOCKER_PREFIX}:${SPRYKER_DOCKER_TAG}
    healthcheck:
      test: [ "CMD", "nc", "-z", "localhost", "5672" ]
      interval: 15s
      timeout: 10s
      retries: 30
      start_period: 120s
    environment:
      RABBITMQ_DEFAULT_USER: "{{ serviceData['api']['username'] }}"
      RABBITMQ_DEFAULT_PASS: "{{ serviceData['api']['password'] }}"
      RABBITMQ_MANAGEMENT_LOAD_DEFINITIONS: "false"
      RABBITMQ_MANAGEMENT_HTTP_TIMEOUT: "30000"
      RABBITMQ_MANAGEMENT_REQUEST_TIMEOUT: "30000"
      RABBITMQ_SERVER_ADDITIONAL_ERL_ARGS: "-rabbit tcp_listeners [5672] -rabbitmq_management listener [{port,15672},{request_timeout,30000}]"
    volumes:
      - {{ serviceName }}-{{ serviceData['engine'] }}-data:/var/lib/rabbitmq:rw
