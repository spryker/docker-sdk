  {{ serviceName }}:
    image: spryker/rabbitmq:4.1-rc
    hostname: {{ serviceName }} # RabbitMQ determines the cluster by its hostname
    networks:
      - private
    labels:
      'spryker.app.name': broker
      'spryker.app.type': services
      'spryker.project': ${SPRYKER_DOCKER_PREFIX}:${SPRYKER_DOCKER_TAG}
    healthcheck:
      test: [ "CMD-SHELL", "rabbitmq-diagnostics -q ping && rabbitmq-diagnostics -q check_running && curl -f http://localhost:15672/api/overview || exit 1" ]
      interval: 15s
      timeout: 10s
      retries: 30
      start_period: 120s
    environment:
      RABBITMQ_DEFAULT_USER: "{{ serviceData['api']['username'] }}"
      RABBITMQ_DEFAULT_PASS: "{{ serviceData['api']['password'] }}"
      RABBITMQ_ERLANG_COOKIE: "spryker-rabbitmq-cookie"
      RABBITMQ_MANAGEMENT_LOAD_DEFINITIONS: "false"
      RABBITMQ_SERVER_ADDITIONAL_ERL_ARGS: "-rabbit tcp_listeners [5672] -rabbitmq_management listener [{port,15672}]"
    volumes:
      - {{ serviceName }}-{{ serviceData['engine'] }}-data:/var/lib/rabbitmq:rw
