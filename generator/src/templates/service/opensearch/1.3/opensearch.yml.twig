    networks:
        - private
{% if project['docker']['ssl']['strict'] | default(false) %}
    ports:
        - 9300:9300
{% endif %}
    labels:
        'spryker.app.name': search
        'spryker.app.type': services
        'spryker.project': ${SPRYKER_DOCKER_PREFIX}:${SPRYKER_DOCKER_TAG}
    healthcheck:
        test: >
{% if project['docker']['ssl']['strict'] | default(false) %}
            curl -f \
                  --cacert /usr/share/opensearch/config/certs/spryker_ca.crt \
                  --cert  /usr/share/opensearch/config/certs/ssl.crt \
                  --key   /usr/share/opensearch/config/certs/ssl.key \
                  https://localhost:9200/_cat/health
{% else %}
            curl -f localhost:9200/_cat/health
{% endif %}

        interval: 10s
        timeout: 5s
        retries: 5
    ulimits:
        memlock:
            soft: -1
            hard: -1
        nofile:
            soft: 65536
            hard: 65536
    environment:
        - OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m
    volumes:
        - {{ serviceName }}-{{ serviceData['engine'] }}-data:/usr/share/opensearch/data:rw
{% if project['docker']['ssl']['strict'] | default(false) %}
        - ./${DEPLOYMENT_PATH}/context/opensearch/opensearch-ssl.yml:/usr/share/opensearch/config/opensearch.yml:ro
        - ./${DEPLOYMENT_PATH}/spryker_ca.crt:/usr/share/opensearch/config/certs/spryker_ca.crt:ro
        - ./${DEPLOYMENT_PATH}/ssl.crt:/usr/share/opensearch/config/certs/ssl.crt:ro
        - ./${DEPLOYMENT_PATH}/ssl.key:/usr/share/opensearch/config/certs/ssl.key:ro
{% else %}
        - ./${DEPLOYMENT_PATH}/context/opensearch/opensearch.yml:/usr/share/opensearch/config/opensearch.yml:ro
{% endif %}
