SPRYKER_SEARCH_ENGINE=OS
SPRYKER_SEARCH_HOST={{ serviceName }}
SPRYKER_SEARCH_PORT={{ serviceData['port'] | default(9200) }}
SPRYKER_SEARCH_INDEX_PREFIX={{ searchIndexPrefix }}
# STORE-SPECIFIC
#SPRYKER_SEARCH_NAMESPACE=
SPRYKER_SEARCH_PROTOCOL={{ project['docker']['ssl']['strict'] | default(false) ? 'https': 'http' }}
{% if project['docker']['ssl']['strict'] | default(false) %}
SPRYKER_SEARCH_CA=/certs/spryker_ca.crt
SPRYKER_SEARCH_CERT=/certs/ssl.crt
SPRYKER_SEARCH_KEY=/certs/ssl.key
{% endif %}
