{% include "env/common.env.twig" with project %}

{% include "env/pm/php-fpm.env.twig" with {
    applicationData: applicationData,
    project: project
} %}

{% include "env/key_value_store/#{project['services']['key_value_store']['engine']}.env.twig" ignore missing with {
    serviceData: project['services']['key_value_store'],
    serviceName: 'key_value_store',
    keyValueStoreConnections: project['keyValueStoreConnections'],
    project: project
} %}

{% include "env/search/#{project['services']['search']['engine']}.env.twig" ignore missing with {
    serviceData: project['services']['search'],
    serviceName: 'search',
    searchIndexPrefix: project['namespace'],
    project: project
} %}

{% include "env/session-be/#{project['services']['session']['engine']}.env.twig" ignore missing with {
    serviceData: project['services']['session'],
    serviceName: 'session',
    project: project
} %}

{% include "env/scheduler/#{project['services']['scheduler']['engine']}.env.twig" ignore missing with {
    serviceData: project['services']['scheduler'],
    serviceName: 'scheduler',
    project: project
} %}

{% include "env/database/#{project['services']['database']['engine']}.env.twig" ignore missing with {
    serviceData: project['services']['database'],
    regionData: regionData['services']['database'],
    regionDataDatabases: regionData['services']['databases'],
    serviceName: 'database',
    project: project
} %}

{% include "env/broker/#{project['services']['broker']['engine']}.env.twig" ignore missing with {
    serviceData: project['services']['broker'],
    serviceName: 'broker',
    brokerConnections: brokerConnections
} %}

{% include "env/mail/mail.env.twig" with {
    serviceData: regionData['services']['mail']
} %}

#PHPSTORM
PHP_IDE_CONFIG=serverName={{ project['docker']['debug']['server-name'] | default('spryker') }}
