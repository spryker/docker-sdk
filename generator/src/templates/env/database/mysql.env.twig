SPRYKER_DB_ENGINE=mysql
SPRYKER_DB_HOST={{ serviceName }}
SPRYKER_DB_PORT={{ serviceData['port'] | default(3306) }}
SPRYKER_DB_DATABASE={{ regionData['database'] | default(serviceData['database']) }}
SPRYKER_DB_USERNAME={{ regionData['username'] | default(serviceData['root']['username']) | default('root') }}
SPRYKER_DB_PASSWORD={{ regionData['password'] | default(serviceData['root']['password']) | default('secret') }}
SPRYKER_DB_ROOT_USERNAME=root
SPRYKER_DB_ROOT_PASSWORD={{ serviceData['root']['password'] | default('secret') }}
SPRYKER_DB_CHARACTER_SET={{ regionData['character-set'] | default('utf8') }}
SPRYKER_DB_COLLATE={{ regionData['collate'] | default('utf8_general_ci') }}
SPRYKER_PAAS_SERVICES={{ regionDataDatabases | env_var }}
{% if project['docker']['ssl']['strict'] | default(false) %}
SPRYKER_DB_SSL_CA=/certs/spryker_ca.crt
{% endif %}
